<h2>Edit Figure</h2>

<form method="post" action="/figures/<%=@figure.id%>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p>Edit Existing Figure:</p>
  <p>Current Name: <%= @figure.name %></p>
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id %>" <%='checked' if @figure.titles.include?(title)%>><%=title.id%></index>
  <% end %>

  <% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.id%></index>
  <% end %>

  <label>and/or, create a new title:</label>
  <input type="text" name="title[name]" id="new_title">

  <label>and/or, create a new landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <input type="text" name="landmark[year_completed]" id="new_landmark_year_completed">

  <input type="submit" id="Edit Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
