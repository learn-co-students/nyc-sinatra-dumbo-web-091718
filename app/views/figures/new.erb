<h2>Create New Figure</h2>

<form method="post" action="/figures">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id %>"><%=title.name%></index>
  <% end %>

  <% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></index>
  <% end %>

  <label>and/or, create a new title:</label>
  <input type="text" name="title[name]" id="new_title">

  <label>and/or, create a new landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" id="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
