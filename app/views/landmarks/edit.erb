<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%=@landmark.id%>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p>Existing Name: <%=@landmark.name%></p>
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="name">

  <br><br>
  <p>Existing Year: <%= @landmark.year_completed %>
  <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="year_completed">


  <br><br>

  <label>Figure:</label>
  <% @figures.each do |figure| %>
  <input type="radio" name="landmark[figure_id]" value="<%=figure.id%>" id="<%=figure.id%>" <%='checked' if @landmark.figure == figure%>><%=figure.name%></input>
  <% end %>

  <input type="submit" id="Edit Landmark">
</form>


<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
