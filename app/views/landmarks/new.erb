<h2>Create New Landmark</h2>

<form method="post" action="/landmarks">
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="landmark_name">

  <br><br>

  <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">


  <br><br>

  <label>Figure:</label>
  <% @figures.each do |figure| %>
  <input type="checkbox" name="landmark[figure_id]" value="<%=figure.id%>" id="<%=figure.id%>"><%=figure.name%></input>
  <% end %>

  <input type="submit" id="Create New Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
